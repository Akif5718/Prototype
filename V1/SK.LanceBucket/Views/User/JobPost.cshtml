
@{
    ViewBag.Title = "JobPost";
}

<form class="form-horizontal">
    <br />
   
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6" style="box-shadow: 0 15px 40px rgba(80,138,255,0.5); ">
                <fieldset>
                    <legend>Creating Job</legend>
                    <div class="form-group">
                        <label for="inputEmail" class="col-lg-2 control-label">Project Name</label>
                        <div class="col-lg-10">
                            <input class="form-control" id="inputEmail" placeholder="e.g Design a web page for a website" type="text">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="textArea" class="col-lg-2 control-label">Description</label>
                        <div class="col-lg-10">
                            <textarea class="form-control" rows="3" id="textArea" placeholder="Describe your Project"></textarea>
                            <span class="help-block">A longer block of help text that breaks onto a new line and may extend beyond one line.</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail" class="col-lg-2 control-label">Write skills</label>
                        <div class="col-lg-10">
                            <input class="form-control" id="inputEmail" placeholder="Skills" type="text">

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail" class="col-lg-2 control-label">Budget</label>
                        <div class="col-lg-10">
                            <input class="form-control" id="inputEmail" placeholder="Budget" type="text">

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail" class="col-lg-2 control-label">Time Required</label>
                        <div class="col-lg-10">
                            <input class="form-control" id="inputEmail" placeholder="Time" type="text">

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail" class="col-lg-2 control-label">Required member</label>
                        <div class="col-lg-10">
                            <input class="form-control" id="inputEmail" placeholder="Number of member" type="text">

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">How do you want to pay?</label>
                        <div class="col-lg-10">
                            <div class="radio">
                                <label>
                                    <input name="optionsRadios" id="optionsRadios1" value="option1" checked="" type="radio">
                                    Fixed
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input name="optionsRadios" id="optionsRadios2" value="option2" type="radio">
                                    Hourly
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="reset" class="btn btn-default" onclick="location.href='@Url.Action("Profile", "User")'">Cancel</button>
                            <button type="reset" class="btn btn-primary" onclick="location.href='@Url.Action("JobHome", "User")'">Create</button>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-md-3"></div>
        </div>
    

</form>